{
    "compilerOptions": {
        "lib": [
            "es2015",
            "dom"
        ],
        "moduleResolution": "Node",
        "module": "CommonJS",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es6",
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": [
        "node"
    ]
}