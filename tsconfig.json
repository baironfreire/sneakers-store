{
  "compilerOptions": {
      "lib": [
          "es2015",
          "es2020",
          "dom"
      ],
      "moduleResolution": "Node",
      "module": "commonjs",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "target": "es2017",
      "outDir": "./public"
  },
  "exclude": [
      "node_modules"
  ],
  "typeRoots": [
      "node_modules/@types"
  ],
  "types": [
      "node"
  ]
}